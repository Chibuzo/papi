extend layout

block content 
    .sector.my-5
        .container 
            .row.justify-content-center
                .col-lg-8
                    h2.mb-4 #[strong Open Internships]

                    each internship in internships
                        - const url_path = internship.title.split(' ').join('-')
                        .post-entry.small-horizontal.mb-5
                            .content
                                .post-meta.mb-3
                                    a.category(href='#')= internship.organization

                                h2.heading
                                    a(href=`/internship/${internship.id}/${url_path}`)= internship.title
                                p= view.postIntro(internship.details, 200)
                                p #[strong From:] #{view.formatDate(internship.start_date)} - #{view.formatDate(internship.end_date)}
                                p.text-end 
                                    a.btn.btn-primary(href=`/apply?id=${internship.id}`) Apply
                                hr




